<!-- app/views/restaurants/index.html.erb -->
<h1 class="mb-4">All Restaurants</h1>

<div class="list-group">
  <% @restaurants.each do |restaurant| %>
    <a href="<%= restaurant_path(restaurant) %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
      <div>
        <h5 class="mb-1"><%= restaurant.name %></h5>
        <small class="text-muted"><%= restaurant.category.capitalize %></small>
      </div>
      <span class="badge bg-primary rounded-pill"><%= restaurant.average_rating %> / 5</span>
    </a>
  <% end %>
</div>

<%= link_to "Add New Restaurant", new_restaurant_path, class: "btn btn-success mt-4" %>
